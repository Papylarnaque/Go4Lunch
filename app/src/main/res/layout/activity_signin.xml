<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signin_layout">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/bg_portraitBackgroundDescription"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_g4l_portrait" />

    <!--  LOGO and Text - Top part of SIGN IN screen  -->

    <RelativeLayout
        android:id="@+id/widget30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/logoTextDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/logo_g4l" />

        <TextView
            android:id="@+id/text_AppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLogo"
            android:layout_marginTop="-25dp"
            android:gravity="center_horizontal"
            android:shadowColor="@color/colorTextBlack"
            android:shadowRadius="1"
            android:text="@string/appName"
            android:textAlignment="center"
            android:textColor="@color/tw__solid_white"
            android:textSize="70sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_AppSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_AppName"
            android:layout_marginTop="-10dp"
            android:gravity="center_horizontal"
            android:shadowColor="@color/colorTextBlack"
            android:shadowRadius="1"
            android:text="@string/appSentence"
            android:textAlignment="center"
            android:textColor="@color/tw__solid_white"
            android:textSize="12sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button_password"
        android:layout_width="@dimen/signin_button_width"
        android:layout_height="@dimen/signin_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/signin_first_button_distance_from_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button_facebook"
        android:layout_width="@dimen/signin_button_width"
        android:layout_height="@dimen/signin_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/signin_between_buttons"
        app:layout_constraintStart_toStartOf="@+id/login_button_password"
        app:layout_constraintTop_toBottomOf="@+id/login_button_password" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/login_button_google"
        android:layout_width="@dimen/signin_button_width"
        android:layout_height="@dimen/signin_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/signin_between_buttons"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="@+id/login_button_facebook"
        app:layout_constraintTop_toBottomOf="@+id/login_button_facebook" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/login_button_twitter"
        android:layout_width="@dimen/signin_button_width"
        android:layout_height="@dimen/signin_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/twitter_button"
        app:layout_constraintStart_toStartOf="@+id/login_button_google"
        app:layout_constraintTop_toBottomOf="@+id/login_button_google" />


</androidx.constraintlayout.widget.ConstraintLayout>